<%= title t("passwords.new.page_title"), :h2 %>
<% form_for @password do |f| %>
  <%= f.error_messages %>
	<fieldset>
		<legend><%= t("passwords.new.email_legend") %></legend>
		<ol>
			<li>
		    <%= f.label :email %>
		    <%= f.text_field :email %>
			</li>
		</ol>
	</fieldset>
	<div class="buttons">
	<%= f.submit t("passwords.new.submit_button") %>
	</div>
<% end %>

