<%= title t("passwords.reset.page_title"), :h2 %>
<br />
<% form_for :user, :url => { :action => 'update_after_forgetting' } do |f| %>
  <%= f.error_messages %>
  <p><%= t("passwords.reset.instruction") %></p>
	<fieldset>
		<legend><%= t("passwords.reset.update_password_legend") %></legend>
		<ol>
			<li>
		    <%= f.label :password %>
		    <%= f.password_field :password %>
			</li>
			<li>
		    <%= f.label :password_confirmation %>
		    <%= f.password_field :password_confirmation %>
			</li>
		</ol>
	</fieldset>
	<%= hidden_field_tag :reset_code, params[:reset_code] %>
	<div class="buttons">
    <%= f.submit t("passwords.reset.submit_button") %>
	</div>
<% end %>
