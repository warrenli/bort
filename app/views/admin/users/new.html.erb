<% @user.password = @user.password_confirmation = @user.current_password = nil %>
<%= title t("admin.users.new.page_title"), :h1 %>
<% form_for :user, :url=>admin_users_path do |f| -%>
  <%= f.error_messages %>

  <fieldset>
    <legend><%= t("admin.users.new.user_legend") %></legend>

    <div class="form_row"><%= f.label :login %>
      <%= f.text_field :login %>
    </div>

    <div class="form_row"><%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div class="form_row"><%= f.label :email %>
      <%= f.text_field :email %>
    </div>

    <div class="form_row"><%= f.label :password %>
      <%= f.password_field :password %>
    </div>

    <div class="form_row"><%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
    </div>

    <div class="form_row">
      <%= submit_tag t("admin.users.new.create_button"), :class => "submit" %>
    </div>

  </fieldset>
<% end %>

<%= link_to t("admin.go_back"), admin_users_path %>
